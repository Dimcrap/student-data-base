{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe build active file",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-g",
        "${workspaceFolder}/src/*.cpp",
        "-I${workspaceFolder}/include",
        "-o",
        "${workspaceFolder}/build/program.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "detail": "compiler: g++.exe"
    }
  ]
}